extends layout
block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Registo de contratos
    .w3-container.w3-margin
      h2 Adicionar Registo
      form.w3-container(action="/" method="POST")
        fieldset  
            label idcontrato
            input.w3-input(type="number" name="idcontrato")
            label nAnuncio
            input.w3-input(type="number" name="nAnuncio")
            label tipoprocedimento
            input.w3-input(type="text" name="tipoprocedimento")
            label objectoContrato 
            input.w3-input(type="text" name="objectoContrato")
            label dataPublicacao 
            input.w3-input(type="text" name="dataPublicacao")
            label dataCelebracaoContrato 
            input.w3-input(type="text" name="dataCelebracaoContrato")
            label precoContratual 
            input.w3-input(type="text" name="precoContratual")
            label prazoExecucao 
            input.w3-input(type="text" name="prazoExecucao")
            label NIPC_entidade_comunicante 
            input.w3-input(type="number" name="NIPC_entidade_comunicante")
            label entidade_comunicante 
            input.w3-input(type="text" name="entidade_comunicante")
            label fundamentacao 
            input.w3-input(type="text" name="fundamentacao")
    .w3-container.w3-margin
      table.w3-table-all
        tr
          th idcontrato
          th objectoContrato
          th dataCelebracaoContrato
          th precoContratual 
          th NIPC_entidade_comunicante
          th entidade_comunicante
        
        each c in contratos
          tr
            td
              a(href="/" + c.idcontrato)=c.idcontrato
            td= c.objectoContrato
            td= c.dataCelebracaoContrato
            td= c.precoContratual
            td
              a(href="/entidades/" + c.NIPC_entidade_comunicante)= c.NIPC_entidade_comunicante
            td= c.entidade_comunicante
              
    footer.w3-container.w3-purple.w3-margin
      h5 Generated by Contratos::EngWeb2024 in #{d}
